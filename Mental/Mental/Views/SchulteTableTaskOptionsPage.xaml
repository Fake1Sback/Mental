<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:PartialViews="clr-namespace:Mental.Views.PartialViews"
             x:Class="Mental.Views.SchulteTableTaskOptionsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Schulte table" HorizontalOptions="Center"></Label>
            <Label Text="Grid size" HorizontalOptions="Center"></Label>
            <Label Text="{Binding IntGridSizeSliderValue}" HorizontalOptions="Center"></Label>
            <Slider x:Name="SchulteTableSliderValue" Value="{Binding GridSizeSliderValue}" Maximum="7" Minimum="3"></Slider>
            <StackLayout Orientation="Horizontal">
                <Label Text="Easy Mode"></Label>
                <Button Text="{Binding EasyModeActivatedString}" Command="{Binding EasyModeActivatedSwitchedCommand}"></Button>
            </StackLayout>
            <PartialViews:TimeOptionsView></PartialViews:TimeOptionsView>
            <Button Text="Start" Command="{Binding StartCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>